{% extends 'admin/BaseAdmin.html.twig' %}

{% block title %}Doctor Request List{% endblock %}

{% block body %}
    <h1>Doctor Request List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question Text</th>
                <th>Question Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor_request in doctor_requests %}
            <tr>
                <td>{{ doctor_request.id }}</td>
                <td>{{ doctor_request.QuestionText }}</td>
                <td>{{ doctor_request.QuestionDate ? doctor_request.QuestionDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('doctor_request_show', {'id': doctor_request.id}) }}">show</a>
                    <a href="{{ path('doctor_request_edit', {'id': doctor_request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('doctor_request_new') }}">Create new</a>
{% endblock %}
