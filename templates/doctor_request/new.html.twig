{% extends 'base.html.twig' %}

{% block title %}Contact Doctor{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

{% endblock %}
{% block body %}
    <nav class="mt-3 col-lg-8 navbar-nav mr-auto ml-auto navbar navbar-expand-lg navbar-light bg-light">
        <div class="row navbar-nav" style="flex-wrap: nowrap!important;">
            <div class="col-lg-2 nav-item">
                <a href="{{ path('donor_login') }}" class="nav-link" style="color: black">Home</a>
            </div>

        </div>
    </nav>
    <div class="container w-50 p-5 ">
        <h1>Contact Doctor</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {{ include('doctor_request/_form.html.twig') }}
    </div>

{% endblock %}
